  "features": {
    "realtime_models": ["gpt-4o-realtime-preview-2025-06-03"],
    "transcription_models": ["whisper-1", "gpt-4o-transcribe", "gpt-4o-mini-transcribe"],
    "conservative_defaults": ["whisper-1"],
    "image_models": ["dall-e-3"],
    "connection_methods": ["webrtc", "websocket"],
    "vad_types": ["semantic_vad", "server_vad"],
    "vad_eagerness": ["low", "medium", "high", "auto"],
    "audio_formats": ["pcm16", "g711_ulaw", "g711_alaw"],
    "noise_reduction": ["near_field", "far_field", "disabled"],
    "rate_limit_protection": {
      "max_sessions_per_minute": 3,
      "exponential_backoff": true,
      "connection_throttling": true,
      "retry_delays": "2s-2m"
    },
    "enhanced_features": [
      "semantic_vad_with_configurable_eagerness",
      "conservative_rate_limit_protection",
      "exponential_backoff_on_failures",
      "connection_throttling",
      "real_time_function_calling_v2",
      "ai_facial_expression_control",
      "contextual_image_generation",
      "enhanced_error_handling",
      "confidence_scores_and_logprobs",
      "interrupt_handling",
      "beta_api_support",
      "gpt_4o_transcribe_models",
      "enhanced_noise_reduction"
    ]
  }
